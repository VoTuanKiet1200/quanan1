<script>
    (function () {
        const sliders = document.querySelectorAll('[data-slider]');
        if (!sliders.length) return;

        sliders.forEach(slider => {
            const track = slider.querySelector('.s1-track');
            const slides = Array.from(slider.querySelectorAll('.s1-slide'));
            const dotsWrap = slider.querySelector('.s1-dots');
            const viewport = slider.querySelector('.s1-viewport');

            if (!track || slides.length === 0 || !dotsWrap) return;

            let index = 0;
            let timer = null;
            const delay = 3200;

            // t·∫°o dots = ƒë√∫ng s·ªë l∆∞·ª£ng ·∫£nh
            const dots = slides.map((_, i) => {
                const b = document.createElement('button');
                b.type = 'button';
                b.className = 's1-dot' + (i === 0 ? ' is-active' : '');
                b.setAttribute('aria-label', '·∫¢nh ' + (i + 1));
                b.addEventListener('click', () => go(i));
                dotsWrap.appendChild(b);
                return b;
            });

            function updateDots() {
                dots.forEach((d, i) => d.classList.toggle('is-active', i === index));
            }

            function render() {
                track.style.transform = `translateX(${-index * 100}%)`;
                updateDots();
            }

            function go(i) {
                index = Math.max(0, Math.min(slides.length - 1, i));
                render();
                restart();
            }

            function nextAuto() {
                index = (index + 1) % slides.length; // ‚úÖ ch·∫°y v√≤ng
                render();
            }

            function start() {
                stop();
                timer = setInterval(nextAuto, delay);
            }

            function stop() {
                if (timer) clearInterval(timer);
                timer = null;
            }

            function restart() {
                start();
            }

            // pause khi hover
            if (viewport) {
                viewport.addEventListener('mouseenter', stop);
                viewport.addEventListener('mouseleave', start);
            }

            render();
            start();
        });
    })();
</script>







